<h1>Edit Order</h1>
<form method="post" action="/admin/orders/edit/{{order._id}}">
  <div>
    <label for="product">Product:</label>
    <select id="product" name="product">
      {{#each products}}
        <option value="{{this._id}}" {{#if (eq this._id ../order.product)}}selected{{/if}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  <div>
    <label for="size">Size:</label>
    <input type="text" id="size" name="size" value="{{order.size}}" required>
  </div>
  <div>
    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" value="{{order.quantity}}" required>
  </div>
  <button type="submit">Save Changes</button>
</form>
<a href="/admin/orders">Back to Orders</a>
