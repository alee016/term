<h1>Your Cart</h1>
{{#if cart.items.length}}
  <ul>
    {{#each cart.items}}
      <li>
        {{product.name}} - {{size}} - Quantity: {{quantity}} - Price: ${{price}}
      </li>
    {{/each}}
  </ul>
  <p>Total: ${{cart.total}}</p>
  <a href="/order/submit">Proceed to Checkout</a>
{{else}}
  <p>Your cart is empty.</p>
{{/if}}
<a href="/products">Back to Products</a>
